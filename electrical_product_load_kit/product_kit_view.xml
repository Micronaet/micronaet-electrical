<?xml version="1.0"?>
<openerp>
    <data>
        <!--product.product.kit-->
        <record model="ir.ui.view" id="view_product_product_kit_tree">
            <field name="name">product.product.kit.tree</field>
            <field name="model">product.product.kit</field>
            <field name="arch" type="xml">
                <tree string="Kit">
                     <field name="active" />
                     <field name="name" />
                     <field name="note" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_kit_form">
            <field name="name">product.product.kit.form</field>
            <field name="model">product.product.kit</field>
            <field name="arch" type="xml">
                <form string="Kit">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="active" invisible="1"/>

                            <separator string="Componenti" colspan="4" />
                            <field name="product_ids" colspan="4">
                                <tree string="Componenti" editable="bottom">
                                    <field name="search_code" />
                                    <field name="product_id" />
                                    <field name="uom_id" />
                                    <field name="quantity" />
                                </tree>
                            </field>
                            <separator string="Note" colspan="4" />
                            <field name="note" colspan="4" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_view_product_product_kit">
            <field name="name">Kit</field>
            <field name="res_model">product.product.kit</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_product_kit_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

