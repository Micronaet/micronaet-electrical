<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
       <!-- new.receipt.wizard -->
       <record id="new_receipt_wizard_view" model="ir.ui.view">
            <field name="name">New Receipt</field>
            <field name="model">new.receipt.wizard</field>
            <field name="arch" type="xml">
                <form string="Wizard" version="7.0">
                   <header>
                       <button string="Cancel" special="cancel" />
                       <button name="dummy_action" string="Total" type="object" />
                       <button name="action_done" string="Confirm" type="object" icon="gtk-jump-to" class="oe_highlight" />
                   </header>
                   <group colspan="4" col="4">
                        <field name="name" />
                        <field name="total" />
                        <field name="line_ids">
                            <tree string="Detail:" editable="bottom">
                                <field name="product_id" />
                                <field name="uom:id" />
                                <field name="qty" />
                                <field name="price" />
                            </tree>
                        </field>
                   </group>
                </form>
            </field>
      </record>

      <record model="ir.actions.act_window" id="action_new_receipt_wizard_view">
          <field name="name">New receipt</field>
          <field name="res_model">new.receipt.wizard</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
          <field name="view_id" ref="new_receipt_wizard_view"/>
      </record>  
          
    </data>
</openerp>
